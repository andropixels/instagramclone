<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.editprofileactivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar_editprofileactivity"
        >



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_editprofileactivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            >

            <ImageView
                android:id="@+id/cancel_editprofile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cancelicon"
                />

            <ImageView
                android:id="@+id/save_editprofile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/correct"
                android:layout_marginStart="240dp"
                />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilepicture_editactivity"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/profilepicture"
        />
    <EditText
        android:id="@+id/youname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilepicture_editactivity"
        android:layout_marginLeft="20dp"
        android:hint="your name..............."
        android:layout_marginTop="34dp"
        android:inputType="text"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/youname"
        android:layout_marginLeft="20dp"
        android:hint="user name..............."
        android:inputType="text"
        android:textSize="15sp"


        />

    <EditText
        android:id="@+id/bio_editprofileactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginLeft="20dp"
        android:hint="Bio..............."
        android:inputType="text"
        android:textSize="15sp"


        />
    <TextView
        android:id="@+id/editpropictire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilepicture_editactivity"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="change profile picture"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        />

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:hint="LOGOUT"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent"
        />
    <Button
        android:id="@+id/btndeleteaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="DELETE ACCOUNT"
        android:layout_margin="5dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_above="@id/btnlogout"

        />

</RelativeLayout>